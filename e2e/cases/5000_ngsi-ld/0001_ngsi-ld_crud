# 000 Clean up
#
ngsi rm --host orion-ld --type TemperatureSensor --link ctx --run

```0
REGEX(.*)
```

#
# 001 Create entity
#
ngsi create --host orion-ld entity --link ctx \
--data '{
      "id": "urn:ngsi-ld:TemperatureSensor:001",
      "type": "TemperatureSensor",
      "category": {
            "type": "Property",
            "value": "sensor"
      },
      "temperature": {
            "type": "Property",
            "value": 25,
            "unitCode": "CEL"
      }
}'

```0
```
#
# 002 Get Entity
#
ngsi get entity --link ctx --id urn:ngsi-ld:TemperatureSensor:001 -P

```0
{
  "@context": "http://REGEX(.*)/ngsi-context.jsonld",
  "id": "urn:ngsi-ld:TemperatureSensor:001",
  "type": "TemperatureSensor",
  "category": {
    "type": "Property",
    "value": "sensor"
  },
  "temperature": {
    "type": "Property",
    "value": 25,
    "unitCode": "CEL"
  }
}
```

#
# 003 Create New Attributes
#
ngsi append attrs --link ctx --id urn:ngsi-ld:TemperatureSensor:001 \
--data '{
       "batteryLevel": {
            "type": "Property",
            "value": 0.9,
            "unitCode": "C62"
      },
      "controlledAsset": {
            "type": "Relationship",
            "object": "urn:ngsi-ld:Building:barn002"
      }
}'

```0
```

#
# 004 Get entity
#
ngsi get entity --link ctx --id urn:ngsi-ld:TemperatureSensor:001 -P

```0
{
  "@context": "http://REGEX(.*)/ngsi-context.jsonld",
  "id": "urn:ngsi-ld:TemperatureSensor:001",
  "type": "TemperatureSensor",
  "category": {
    "type": "Property",
    "value": "sensor"
  },
  "temperature": {
    "type": "Property",
    "value": 25,
    "unitCode": "CEL"
  },
  "batteryLevel": {
    "value": 0.9,
    "type": "Property",
    "unitCode": "C62"
  },
  "controlledAsset": {
    "object": "urn:ngsi-ld:Building:barn002",
    "type": "Relationship"
  }
}
```

#
# 005 Create New Attributes
#
ngsi create entities --link ctx \
--data '[
    {
      "id": "urn:ngsi-ld:TemperatureSensor:002",
      "type": "TemperatureSensor",
      "category": {
            "type": "Property",
            "value": "sensor"
      },
      "temperature": {
            "type": "Property",
            "value": 20,
            "unitCode": "CEL"
      }
    },
    {
      "id": "urn:ngsi-ld:TemperatureSensor:003",
      "type": "TemperatureSensor",
      "category": {
            "type": "Property",
            "value": "sensor"
      },
      "temperature": {
            "type": "Property",
            "value": 2,
            "unitCode": "CEL"
      }
    },
     {
      "id": "urn:ngsi-ld:TemperatureSensor:004",
      "type": "TemperatureSensor",
      "category": {
            "type": "Property",
            "value": "sensor"
      },
      "temperature": {
            "type": "Property",
            "value": 100,
            "unitCode": "CEL"
      }
    }
]'

```0
{"@context":"http://REGEX(.*)/ngsi-context.jsonld","success":\["urn:ngsi-ld:TemperatureSensor:002","urn:ngsi-ld:TemperatureSensor:003","urn:ngsi-ld:TemperatureSensor:004"\],"errors":\[\]}
```

#
# 006 Batch Create/Overwrite New Data Entities
#
ngsi upsert entities --link ctx \
--data '[
    {
      "id": "urn:ngsi-ld:TemperatureSensor:002",
      "type": "TemperatureSensor",
      "category": {
            "type": "Property",
            "value": "sensor"
      },
      "temperature": {
            "type": "Property",
            "value": 21,
            "unitCode": "CEL"
      }
    },
    {
      "id": "urn:ngsi-ld:TemperatureSensor:003",
      "type": "TemperatureSensor",
      "category": {
            "type": "Property",
            "value": "sensor"
      },
      "temperature": {
            "type": "Property",
            "value": 27,
            "unitCode": "CEL"
      }
    }
]'

```0
```

#
# 007 Read a Data Entity (verbose)
